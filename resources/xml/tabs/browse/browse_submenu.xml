<brls:Box
    id="browse_submenu_main_box"
    axis="column"
    borderColor="#FFFFFF"
    borderThickness="0"
    width="450"
    height="100%"
    backgroundColor="#CBCBCB"
>

    <!-- TOP BOX -->
    <brls:Box
        id="browse_submenu_top_box"
        axis="row"
        height="8%"
        borderColor="#FFFFFF"
        borderThickness="0"
    >

        <brls:Label
            text="Category Filters"
            fontSize="22"
            textAlign="center"
            height="100%"
            width="83%"
            textColor="#000000"
            borderColor="#FFFFFF"
            borderThickness="0"
        />

        <brls:Image
            id="browse_submenu_category_filters_button_help"
            image="@res/icon/category_filter_button_help.png"
            height="100%"
            width="auto"
            borderColor="#FFFFFF"
            borderThickness="0"
        />

    </brls:Box>


    <brls:LayerView
        id="browse_submenu_content"
        height="590"
        width="100%"
        borderColor="#FFFFFF"
        borderThickness="0"
    />
    


</brls:Box>