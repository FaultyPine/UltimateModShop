<brls:Box
    id="browse"
    width="100%"
    height="100%"
    axis="row"
    borderColor="#E3E830"
    borderThickness="0"
>

    <!-- LEFT ARROW -->

    <brls:Box
        id="arrow_left_box"
        marginLeft="10"
        width="3%"
        height="100%"
    >

        <brls:Image
            id="arrow_left"
            image="@res/icon/play_l.png"
            height="60"
            width="60"
            positionTop="260"
            positionRight="8"
            focusable="true"
        />  
       

    </brls:Box>
    
 

    <!-- Actual box that contains the dynamically created mods -->
    <brls:Box
        id="browse_box"
        axis="column"
    />



    <!-- RIGHT ARROW -->
    <brls:Box
        id="arrow_right_box"
        axis="column"
        marginRight="10"
        positionLeft="-60"
        width="3%"
        height="100%"
        borderThickness="0"
        borderColor="#000000"
    >

        <brls:Image
            id="arrow_right"
            image="@res/icon/play_r.png"
            height="60"
            width="60"
            positionTop="260"
            focusable="true"
        />  


    </brls:Box>


    <!-- Category Filters / Browse "menu" -->
    <brls:Box
        id="browse_menu_box"
        axis="row"
        visibility="gone"
        positionTop="0"
        positionRight="0"
        height="630"
        width="7%"
        borderThickness="5"
        borderColor="#000000"
    >

        <brls:Image
            id="browse_menu_button_image"
            image="@res/icon/y.png"
            height="40"
            width="40"
            borderColor="#FFFFFF"
            borderThickness="0"
        />
        <brls:Image
            id="browse_menu_image"
            image="@res/icon/menu.png"
            height="80"
            width="40"
            borderColor="#FFFFDD"
            borderThickness="100"
            positionRight="-100"
        />

        <brls:Box
            id="browse_menu_layerview"
            borderThickness="2"
            borderColor="#000000"
            positionRight="450"
            width="450"
            height="100%"
        />
        

    </brls:Box>



</brls:Box>