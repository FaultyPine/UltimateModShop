<brls:Box
    id="browse"
    width="100%"
    height="100%"
    axis="row"
    direction="leftToRight"
    justifyContent="center"
    borderThickness="3"
    borderColor="#FBFF0F"
>

    <brls:Image
        id="arrow_left"
        image="@res/icon/play_l.png"
        marginLeft="10"
        width="5%"
        height="100%"
        focusable="true"
    />


    <brls:Box
        id="browse_box"
        axis="column"
    />


    <brls:Image
        id="arrow_right"
        image="@res/icon/play_r.png"
        marginRight="10"
        width="5%"
        height="100%"
        focusable="true"
    />

    <!-- SubmissionNode's added in here dynamically -->

</brls:Box>