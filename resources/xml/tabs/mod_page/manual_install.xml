<brls:Box
    id="manual_install_box"
    backgroundColor="#26a69a"
>

    <brls:Box
        axis="row"
        borderThickness="3"
        borderColor="#000000"
        width="90%"
        height="100%"
    >

        <brls:Box
            backgroundColor="#757575"
            width="50%"
            height="100%"
        />

        <brls:Box
            backgroundColor="#f5f5f5"
            width="50%"
            height="100%"
        />

    </brls:Box>
    
    <brls:Button
        id="manual_install_done_button"
        positionType="absolute"
        positionTop="80%"
        positionLeft="80%"
        height="80"
        width="140"
        text="Done"
        backgroundColor="#3949ab"
    />


</brls:Box>