<brls:Box
    id="mod_page_box"
    axis="row"

    borderThickness="3"
    borderColor="#4E4E4E"
    backgroundColor="#B5B5B5"
>

    <!-- LEFT SIDE -->
    <!--
        OF NOTE:
            ScrollingFrame's technically have infinite height (since they scroll infinitely),
            so you can't use percentages in their children's heights.
    -->
    <brls:Box
        id="mod_page_box_left"
        width="65%"
        borderThickness="5"
        borderColor="#414141"
    >
        <brls:Box
            axis="column"
            width="825"
            height="720"
            paddingTop="20"
            paddingRight="20"
            paddingLeft="20"
            paddingBottom="20"

        >


            <!-- Title/subtitle -->
            <brls:Box
                height="50"
                axis="row"
                lineBottom="3"
                lineColor="#000000"
                marginBottom="5"
            >

                <brls:Label
                    id="title_label"
                    text="Mod Title Here"
                    width="65%"
                    fontSize="32"
                    textColor="#000000"
                />
                <brls:Label
                    id="subtitle_label"
                    visibility="gone"
                    fontSize="15"
                    textAlign="right"
                />
                

            </brls:Box>


            <!-- Screenshots -->
            <brls:Box
                id="screenshots_box"
                height="300"
                width="80%"
            >
                <brls:Image
                    id="screenshots_default_image"
                    image="@res/icon/unknown_image.png"
                    imageAlign="center"
                    scalingType="fit"
                    
                />
            </brls:Box>


            <!-- Screenshot Caption -->
            <brls:Label
                id="image_caption_label"
                text="Image Caption Here"
                marginTop="10"
                width="80%"
                textAlign="center"
                fontSize="18"
            />

            <!-- Screenshot Scroll Dots -->
            <brls:Box
                width="80%"
                height="50"
                axis="row"
                justifyContent="center"
                marginTop="5"
                marginBottom="10"
            >
                <brls:Image
                    id="left_scroll_button"
                    image="@res/icon/L.png"
                    marginTop="10"
                />

                <!-- Holds scroll dots... added to with more screenshots-->
                <brls:Box
                    id="scroll_dot_box"
                    axis="column"
                    marginTop="10"
                    grow="0.1"
                    justifyContent="spaceEvenly"
                >

                    <!-- Scroll dots added in here with horizontal "holders" -->

                </brls:Box>
                
                <brls:Image
                    id="right_scroll_button"
                    image="@res/icon/R.png"
                    marginTop="10"
                />

            </brls:Box>

            <!-- Description -->
            <brls:ScrollingFrame
                height="270"
                scrollingBehavior="no_focus"
            >
                <brls:Box
                    justifyContent="center"
                    paddingLeft="20"
                >

                    <brls:Label
                        id="description_label"
                        singleLine="false"
                        visibility="gone"
                        textColor="#000000"
                        fontSize="17"
                    />

                </brls:Box>



            </brls:ScrollingFrame>


            <brls:Box
                justifyContent="flexEnd"
            >
                <brls:Button
                    marginTop="10"
                    id="description_read_more_button"
                    visibility="gone"
                    height="40"
                    width="20%"
                    text="Read More"
                    backgroundColor="#D6D6D6"
                />
            </brls:Box>


        </brls:Box>
    </brls:Box>

    <!-- END LEFT SIDE -->





    <!--  Right Box  -->

    <brls:Box
        id="mod_page_box_right"
        height="100%"
        width="35%"
        axis="column"
        paddingRight="15"
        paddingLeft="15"
        paddingTop="20"
        paddingBottom="20"
        justifyContent="spaceEvenly"
        borderThickness="5"
        borderColor="#414141"
    >



        <!--  INSTALL  -->
        <brls:Box
            id="install_box"
            height="10%"
            width="97%"
            paddingLeft="30"
            paddingRight="30"
            borderThickness="3"
            borderColor="#000000"
            focusable="true"
        >

            <brls:Image
                id="install_box_image"
                image="@res/icon/X.png"
                width="15%"
            />

            <brls:Label
                id="install_box_label"
                marginLeft="90"
                text="Install"
                textAlign="center"
            />

        </brls:Box>




        <!-- AUTHOR -->
        <brls:Box
            id="author_box"
            height="13%"
            width="100%"
            axis="row"
            paddingRight="5"
            paddingLeft="10"
        >
            
            <brls:Label
                grow="1.0"
                id="author_label"
                autoAnimate="true"
                text="123456789123456789"
                fontSize="24"
            />
            

            <brls:Image
                id="author_image"
                height="100%"
                width="25%"
                image="@res/icon/unknown_image.png"
            />

        </brls:Box>


        <!-- VERSION -->
        <brls:Box
            id="version_box"
            height="7%"
            width="100%"
            axis="row"
            paddingRight="20"
            paddingLeft="10"
        >

            <brls:Label
                id="version_label"
                text="Version: 0.0.0"
                fontSize="24"
            />

        </brls:Box>

        <!-- UPLOADED DATE -->
        <brls:Box
            id="date_box"
            height="7%"
            width="100%"
            axis="row"
            paddingRight="20"
            paddingLeft="10"
        >

            <brls:Label
                id="date_label"
                text="Date Uploaded: 0/0/2020"
                fontSize="24"
            />

        </brls:Box>

        <!-- DOWNLOAD SIZE -->
        <brls:Box
            id="dlsize_box"
            height="7%"
            width="100%"
            axis="row"
            paddingRight="20"
            paddingLeft="10"
        >

            <brls:Label
                id="dlsize_label"
                text="Download Size: 0.0 MB"
                fontSize="24"
            />

        </brls:Box>

        <!-- DOWNLOADS, VIEWS, LIKES -->

        <brls:Box
            id="stats_box"
            axis="row"
            paddingRight="5"
            paddingLeft="5"
            paddingTop="5"
            paddingBottom="10"
            height="10%"
            width="100%"
        >
            <!-- Download Count -->
            <brls:Box
                id="download_count_box"
                width="33%"
                height="100%"
                axis="row"
                justifyContent="spaceEvenly"
            >

                <brls:Image
                    id="download_count_image"
                    maxWidth="50"
                    image="@res/icon/download.png"
                />

                <brls:Label
                    id="download_count_label"
                    singleLine="true"
                    fontSize="22"
                    text="0"
                />

            </brls:Box>

            <!-- View Count -->
            <brls:Box
                id="view_count_box"
                width="33%"
                height="100%"
                axis="row"
                justifyContent="spaceEvenly"
            >

                <brls:Image
                    id="view_count_image"
                    maxWidth="50"
                    image="@res/icon/view.png"
                />

                <brls:Label
                    id="view_count_label"
                    singleLine="true"
                    fontSize="22"
                    text="0"
                />

            </brls:Box>

            <!-- Like Count -->
            <brls:Box
                id="like_count_box"
                width="33%"
                height="100%"
                axis="row"
                justifyContent="spaceEvenly"
            >

                <brls:Image
                    id="like_count_image"
                    maxWidth="50"
                    image="@res/icon/heart.png"
                />

                <brls:Label
                    id="like_count_label"
                    singleLine="true"
                    fontSize="22"
                    text="0"
                />

            </brls:Box>

        </brls:Box>

        <!-- CATEGORIES -->

        <brls:Box
            id="categories_box"
            height="15%"
            width="100%"
            justifyContent="spaceBetween"
            paddingBottom="5"
            paddingRight="10"
            paddingLeft="10"
        >

            <!-- CATEGORY -->
            <brls:Box
                height="100%"
                width="35%"
                paddingTop="5"
                backgroundColor="#A49F9F"
                cornerRadius="15"
            >

                <brls:Box
                    axis="column"
                    height="100%"
                    width="100%"
                >

                    <brls:Label
                        width="35%"
                        text="Category:"
                        fontSize="16"
                        textAlign="center"
                        textColor="#000000"
                    />

                    <brls:Box
                       axis="row"
                       width="35%"
                       height="75%"
                       justifyContent="spaceEvenly"
                    >

                        <brls:Label
                            id="category_label"
                            animated="true"
                            text="???"
                            fontSize="20"
                            textColor="#000000"
                        />

                        <brls:Image
                            id="category_image"
                            image="@res/icon/unknown_image.png"
                            marginTop="7"
                            height="60%"
                            width="10%"
                        />

                    </brls:Box>

                </brls:Box>

            </brls:Box>


            <!-- SUBCATEGORY -->
            <brls:Box
                height="100%"
                width="45%"
                paddingTop="5"
                backgroundColor="#A49F9F"
                cornerRadius="15"
            >

                <brls:Box
                    axis="column"
                    height="100%"
                    width="50%"
                >

                    <brls:Label
                        width="100%"
                        text="Sub-Category:"
                        fontSize="16"
                        textAlign="center"
                        textColor="#000000"
                    />

                    <brls:Box
                       axis="row"
                       width="100%"
                       height="75%"
                       justifyContent="spaceEvenly"
                    >

                        <brls:Label
                            id="subcategory_label"
                            animated="true"
                            text="???"
                            fontSize="20"
                            textColor="#000000"
                        />

                        <brls:Image
                            id="subcategory_image"
                            scalingType="fit"
                            image="@res/icon/unknown_image.png"
                            marginTop="7"
                            width="35%"
                        />

                    </brls:Box>

                </brls:Box>

            </brls:Box>

        </brls:Box>


        <!-- TOGGLE -->

        <brls:Box
            id="toggle_box"
            height="10%"
            width="97%"
            paddingLeft="30"
            paddingRight="30"
            borderThickness="3"
            focusable="true"
            visibility="gone"
            borderColor="#000000"
        >

            <brls:Image
                id="toggle_box_image"
                image="@res/icon/Y.png"
                width="15%"
            />

            <brls:Label
                id="toggle_box_label"
                marginLeft="90"
                text="Disable"
                textAlign="center"
            />

        </brls:Box>
        




        <!-- CLOSE -->
        <brls:Box
            id="close_box"
            height="10%"
            width="97%"
            paddingLeft="30"
            paddingRight="30"
            borderThickness="3"
            borderColor="#000000"
            focusable="true"
        >

            <brls:Image
                id="close_box_image"
                image="@res/icon/B.png"
                width="15%"
            />

            <brls:Label
                id="close_box_label"
                marginLeft="90"
                text="Close"
                textAlign="center"
            />

        </brls:Box>


    </brls:Box>

    <!-- END RIGHT SIDE -->


</brls:Box>