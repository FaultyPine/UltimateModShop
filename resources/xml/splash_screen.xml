<brls:Box 
    id="splash_screen"
    width="100%"
    height="100%"
    axis="column"
    borderThickness="1"
    borderColor="#000000"
    backgroundColor="#3a4750"
>

    <brls:Label
        text="UltimateModShop"
        width="100%"
        textAlign="center"
        fontSize="50"
        textColor="#EEEEEE"
        marginTop="150"
    />

    <brls:Label
        id="splash_screen_motd_text"
        fontSize="15"
        textColor="#EEEEEE"
        marginLeft="50"
    />

    <brls:Button
        id="splash_screen_continue_button"
        text="Press A To Continue"
        height="10%"
        width="25%"
        marginLeft="900"
        marginBottom="50"
    />


</brls:Box>