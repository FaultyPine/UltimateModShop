<brls:Box
        id="popup_box"
        axis="column"
        positionType="absolute"
        positionTop="220"
        positionLeft="450"
        height="120"
        width="400"
        backgroundColor="#CDCDCD"
        justifyContent="spaceEvenly"
        paddingLeft="5"
        paddingRight="5"
        borderThickness="2"
        borderColor="#000000"
    >

        <brls:Label
            id="popup_title_label"
            text="Popup Title"
            width="100%"
            fontSize="20"
            lineBottom="2"
            lineColor="#000000"
        />

        <brls:Box
            axis="row"
            width="100%"
            height="70%"
            justifyContent="spaceEvenly"
            paddingLeft="10"
            paddingRight="10"
            paddingTop="10"
            paddingBottom="10"
        >


            <brls:Button
                id="popup_confirm"
                text="Yes"
                fontSize="20"
                borderThickness="2"
                borderColor="#000000"
            />

            <brls:Button
                id="popup_deny"
                text="No"
                fontSize="20"
                borderThickness="2"
                borderColor="#000000"
            />

        </brls:Box>
        

    </brls:Box>