<brls:Box
        id="popup_box"
        visibility="gone"
        axis="column"
        positionType="absolute"
        positionTop="40%"
        positionLeft="33%"
        height="20%"
        width="50%"
        backgroundColor="#CDCDCD"
        justifyContent="spaceEvenly"
        paddingLeft="5"
        paddingRight="5"
        borderThickness="2"
        borderColor="#000000"
    >

        <brls:Label
            id="popup_title_label"
            text="Popup Title"
            width="100%"
            fontSize="20"
            lineBottom="2"
            lineColor="#000000"
        />

        <brls:Box
            axis="row"
            width="100%"
            height="70%"
            justifyContent="spaceEvenly"
            paddingLeft="10"
            paddingRight="10"
            backgroundColor="#FFFFFF"
        >


            <brls:Button
                id="popup_confirm"
                text="Yes"
                borderThickness="1"
                borderColor="#000000"
            />

            <brls:Button
                id="popup_deny"
                text="No"
                borderThickness="1"
                borderColor="#000000"
            />

        </brls:Box>
        

    </brls:Box>