
<!-- 
    This represents an individual item in the top bar
-->

<brls:Box
    width="15%"
    height="45%"
    borderThickness="2"
    borderColor="#000000"
    cornerRadius="10"
    backgroundColor="#FFFFFF"
    marginBottom="20"
    marginRight="50"
    marginLeft="50"
    justifyContent="center"
>


    <brls:Label
        id="top_bar/bar_item_label"
        width="auto"
        height="auto"
        textAlign="center"
        fontSize="30"
    />
    <!-- ^ This label's text element is set dynamically -->

</brls:Box>