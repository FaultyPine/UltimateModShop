<!-- 
    This represents the entire "top bar" view
-->

<brls:Box
    id="top_bar"
    width="55%"
    height="8%"
    marginLeft="550"
    marginBottom="8"
    axis="row"
    direction="leftToRight"
    justifyContent="spaceBetween"
    alignItems="spaceBetween"
    borderThickness="1.5"
    backgroundColor="#C3C3C3"
    borderColor="#000000">

    <brls:Image
        image="@res/icon/LR.png"
        height="85%"
        width="80"
        marginLeft="5"
    />

    <!--  BarItem's get dynamically added in here  -->


</brls:Box>