<brls:Box
    id="installed_item"
    axis="row"
    width="1200"
    height="110"
    marginTop="8px"
    marginBottom="8px"
    justifyContent="spaceBetween"
    borderThickness="3"
    borderColor="#FFFFFF"
    backgroundColor="#A4A4A4"
    focusable="true"
>

    <brls:Image
        id="installed_item_thumbnail"
        image="@res/icon/unknown_image.png"
        imageAlign="left"
        width="25%"
    />

    <brls:Label
        id="installed_item_title"
        text="???"
    />

    <brls:Box
        width="20%"
        id="right_side"
        axis="column"
        justifyContent="spaceEvenly"
        alignItems="flexEnd"
    >

        <brls:Label
            id="installed_item_author"
            text="Author: Unknown"
            textAlign="right"
        />  


        <brls:Image
            id="installed_item_toggle"
            image="@res/icon/toggle_on.png"
            height="20%"
            width="35%"
            imageAlign="right"
        />

    </brls:Box>




</brls:Box>