<brls:Box
    id="submission_node_box"
    axis="column"
    width="300"
    height="170"
    marginRight="70"
    marginLeft="20"
    justifyContent="center"
    alignItems="center"
    borderThickness="2"
    borderColor="#1CDB92"
    cornerRadius="15"
    focusable="true"
    >


    <brls:Image
        id="submission_image"
        image="@res/icon/unknown_image.png"
        width="auto"
        height="70%"
        imageAlign="top"
        scalingType="fit"
        marginBottom="20px"
        marginTop="10px"
        marginRight="20px"
    />

    <brls:Label
        id="submission_label"
        singleLine="false"
        width="auto"
        height="15%"
        text="???"
        textColor="#FFFFFF"
        animated="true"
        autoAnimate="true"
        textAlign="center"
        marginBottom="20px"
    />


</brls:Box>