<brls:Box
    id="submission_node_box"
    axis="column"
    width="300"
    height="170"
    marginRight="40"
    marginLeft="40"
    justifyContent="center"
    alignItems="center"
    borderThickness="2"
    borderColor="#1CDB92"
    cornerRadius="15"
    focusable="true"
>


    <brls:Image
        id="submission_image"
        image="@res/icon/unknown_image.png"
        width="70%"
        height="70%"
        scalingType="fit"
        marginBottom="20px"
        marginTop="10px"
    />

    <brls:Label
        id="submission_label"
        singleLine="false"
        width="auto"
        height="20%"
        text="???"
        textColor="#FFFFFF"
        fontSize="10"
        animated="false"
        autoAnimate="false"
        textAlign="center"
        marginBottom="5"
    />


</brls:Box>